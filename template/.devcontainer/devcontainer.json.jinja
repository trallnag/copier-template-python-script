{
  "name": "{{ project_name }}",

  "workspaceFolder": "/workspaces/{{ project_name }}",

  "dockerComposeFile": "docker-compose.yaml",

  "service": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "Tyriar.sort-lines",
        "charliermarsh.ruff",
        "mhutchie.git-graph",
        "ms-python.python",
        "tamasfe.even-better-toml",
        "task.vscode-task",
      ]
    }
  },

  "postCreateCommand": {
    "fixVolumeVenv": "sudo chown -R vscode:vscode /workspaces/{{ project_name }}/.venv",
    "fixVolumePreCommitCache": "sudo chown -R vscode:vscode /home/vscode/.cache/pre-commit",
    "fixVolumeUvCache": "sudo chown -R vscode:vscode /home/vscode/.cache/uv"
  },

  "postStartCommand": "task init",
}
